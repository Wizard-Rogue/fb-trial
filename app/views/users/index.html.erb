<% title "Users" %>

<table>
  <tr>
    <th>Uid</th>
    <th>Provider</th>
    <th>Fname</th>
    <th>Lname</th>
    <th>Email</th>
    <th>Image</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.uid %></td>
      <td><%= user.provider %></td>
      <td><%= user.fname %></td>
      <td><%= user.lname %></td>
      <td><%= user.email %></td>
      <td><%= user.image %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_user_path %></p>
